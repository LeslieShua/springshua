{{>layouts/header}}


<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#articleList}} <!--모델에 등록된 데이터는 #을 통해서 가져올 수 있음 id 개수에 따라서 목록 생성-->
    <tr>
        <th>{{id}}</th>
        <td><a href="articles/{{id}}">{{title}}</a></td>
        <td>{{content}}</td>
    </tr>
    {{/articleList}}
    </tbody>
</table>

<a href="/articles/new">게시글 생성</a>

{{>layouts/footer}}