{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
   {{#article}} <!--모델에 등록된 데이터는 #을 통해서 가져올 수 있음-->
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>
   {{/article}}
    </tbody>
</table>

<a href="/articles/{{article.id}}/edit" class="btn btn-primary">편집</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">삭제</a>
<a href="/articles">Article AllList</a>

{{>layouts/footer}}